<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
        	{% block title %}
        		Welcome!
    		{% endblock %}
		</title>
        {% block stylesheets %}
        	<link rel="stylesheet" type="text/css" href="{{ asset('Style/bootstrap.css') }}" />
        	<link rel="stylesheet" type="text/css" href="{{ asset('Style/app.css') }}" />
        {% endblock %}
    </head>
    <body class="container">
      {% block body %}
            <header>
                {% block header %}
                    {% include('includes/header.html.twig') %}
                {% endblock %}
            </header>
            <div id="content">
                {% block content %}
                

                {% endblock %}
            </div>
     
        <div id="footer">
        
            {% block footer %}
                {% include('includes/footer.html.twig') %}
            
            {% endblock %}
        
        </div>
        
    {% endblock %}
    
    {% block javascripts %}
        <script src="{{ asset('Js/app.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.min.js') }}" type="text/javascript"></script>
    {% endblock %}
    </body>
</html>